@{
    ViewData["Title"] = "Admin Tables";
}

@model IEnumerable<DestinationListVM>

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <p class="mb-4">
       This page will contain all data tables of this website(at some point)
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Destinations</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
              <div class="row">
                  <div class="col-sm-9">
                        <a class="btn btn-outline-success" asp-action="Create" asp-controller="AdminDestination">Create</a>
                  </div>
              </div>
                <table class="table table-bordered"  width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>PostalCode</th>
                            <th>Price</th>
                            <th>Rating</th>
                            <th colspan="2" style="text-align: center">Action</th>
                        </tr>
                    </thead>
                   @*  <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Position</th>
                            <th>Office</th>
                            <th>Age</th>
                            <th>Start date</th>
                            <th>Salary</th>
                        </tr>
                    </tfoot> *@
                    <tbody>
                        @foreach (var destination in Model)
                        {
                            <tr>
                                <th>@destination.Id</th>
                                <th><img src="@destination.ImgUrl" width="100" height="100"></th>
                                <th>@destination.Name</th>
                                <th>@destination.PostalCode</th>
                                <th>@destination.Price</th>
                                <th>@destination.Rating</th>
                                <th><a class="btn btn-outline-info" asp-action="Update" asp-controller="AdminDestination" asp-route-id="@destination.Id" >Update</a></th>
                                <th><a class="btn btn-outline-danger" asp-action="Delete" asp-controller="AdminDestination" asp-route-id="@destination.Id">Update</a></th>
                            </tr>
                        }
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
